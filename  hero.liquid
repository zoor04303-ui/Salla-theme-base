<section class="roza-hero">
  <div class="roza-hero-content">
    <h1>{{ section.settings.title }}</h1>
    <p>{{ section.settings.subtitle }}</p>
  </div>
</section>

<style>
.roza-hero {
  background: linear-gradient(135deg, #f8b6c8, #f3a6bd);
  padding: 80px 20px;
  text-align: center;
  border-radius: 20px;
}
.roza-hero h1 {
  color: #ffffff;
  font-size: 36px;
  margin-bottom: 10px;
}
.roza-hero p {
  color: #ffffff;
  font-size: 18px;
}
</style>
{% schema %}
{
  "name": "Rooza Hero",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "العنوان",
      "default": "Rooza Themes"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "الوصف",
      "default": "ثيمات وردية أنثوية باحتراف"
    }
  ],
  "presets": [
    {
      "name": "Rooza Hero Section"
    }
  ]
}
{% endschema %}